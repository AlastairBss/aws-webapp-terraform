terraform {
  required_providers {
    aws = {
      source = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}


provider "aws" {
  region = "ap-south-1"
}


resource "aws_vpc" "alb-vpc" {
  cidr_block = "10.0.0.0/16"
  
  tags = {
    Name = "alb-vpc"
  }
}


resource "aws_subnet" "public-subnet1-alb" {
  vpc_id = aws_vpc.alb-vpc.id
  cide_block = "10.0.1.0/24"
  availability_zone = "ap-south-1a"
  map_public_ip_on_launch = true


  tags = {
    Name = "public_subnet1-alb"
  }
}

resource "aws_subnet" "public-subnet2-alb" {
  vpc_id = aws_vpc.alb-vpc.id
  cidr_block = "10.0.2.0/24"
  availability_zone = "ap-south-1b"
  map_public_ip_on_launch = true
 

  tags = {
    Name = "public-subnet2-alb"
  }
}


resource "aws_subnet" "private-subnet1-alb" {
  vpc_id = aws_vpc.alb-vpc.id
  cidr_block = "10.0.11.0/24"
  availability_zone = "ap-south-1a"
  map_public_ip_on_launch = false
 
 
  tags = {
    Name = "private-subnet1-alb"
  }
}


resource "aws_subnet" "private-subnet2-alb" {
  vpc_id = aws_vpc.alb-vpc.id 
  cidr_block = "10.0.12.0/24"    
  availability_zone = "ap-south-1b"
  map_public_ip_on_launch = false 
 

  tags = {
    Name = "private-subnet2-alb"
  }
} 


resource "aws_internet_gateway" "IGW-alb" {
  vpc_id = aws_vpc.alb-vpc.id

  tags = {
    Name = "IGW-alb"
  }
} 
 

resource "aws_route_table" "routing-alb" {
  vpc_id = aws_vpc.alb-vpc.id

  route {
    cidr_block = "0.0.0.0/0"
    gateway_id = aws_internet_gateway.IGW-alb.id

  }

  tags = {
    Name = "routing-alb"
  }
}


resource "aws_route_table_association" "alb-public1-ass" {
  subnet_id = aws_subnet.public-subnet1-alb.id
  route_table_id = aws_route_table.routing-alb.id

}

resource "aws_route_table_association" "alb-public2-ass" {
  subnet_id = aws_subnet.public-subnet2-alb.id
  route_table_id = aws_route_table.routing-alb.id

}
 

resource "aws_eip" "alb-eip" {
  domain = "vpc"
}


resource "aws_nat_gateway" "alb-nat" {
  allocation_id = aws_eip.alb-eip.id
  subnet_id = aws_subnet.public-subnet1-alb.id
  
  tags = {
    Name = "alb-nat"
  }
}


resource "aws_route_table" "private-rt-alb" {
  vpc_id = aws_vpc.alb-vpc.id

  route {
    cidr_block = "0.0.0.0/0"
    nat_gateway_id = aws_nat_gateway.alb-nat.id
  }

  tags = {
    Name = "private-rt-alb"
  }
}

resource "aws_route_table_association" "private-sub1-ass" {
  subnet_id = aws_subnet.private-subnet1-alb.id
  route_table_id = aws_route_table.private-rt-alb.id
}

resource "aws_route_table_association" "private-sub2-ass" {
  subnet_id = aws_subnet.private-subnet2-alb.id
  route_table_id = aws_route_table.private-rt-alb.id
}

resource "aws_security_group" "alb-sg" {
  name = "alb-sg"
  vpc_id = aws_vpc.alb-vpc.id


  ingress {
    from_port = 80
    to_port = 80
    protocol = "tcp"
    cidr_blocks = ["0.0.0.0/0"]

  }
  
  egress {
    from_port = 0
    to_port = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]

  }

  tags = {
    Name = "alb-sg"
  }
}


resource "aws_security_group" "alb-sg-ec2" {
  name = "alb-sg-ec2"
  vpc_id = aws_vpc.alb-vpc.id


  ingress {
    from_port = 80
    to_port = 80
    protocol = "tcp"
    security_groups = [aws_security_group.alb-sg.id]


  }
  
  egress {
    from_port = 0
    to_port = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]

  }



  tags = {
    Name = "alb-sg-ec2"

  }
}


resource "aws_lb_target_group" "app_tg" {
  name     = "project2-tg"
  port     = 80
  protocol = "HTTP"
  vpc_id   = aws_vpc.main.id

  health_check {
    path                = "/"
    interval            = 30
    timeout             = 5
    healthy_threshold   = 2
    unhealthy_threshold = 2
    matcher             = "200"
  }

  tags = {
    Name = "project2-target-group"
  }
}


resource "aws_lb" "app-alb" {
  name = "app-alb"
  load_balancer_type = "application"


  subnets = [
    aws_subnet.public-subnet1-alb.id,
    aws_subnet.public-subnet2-alb.id
  ]


  security_groups = [aws_security_group.alb-sg.id]











